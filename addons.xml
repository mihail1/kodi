<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.release24" name="Release24" version="1.2.6" provider-name="piotrekcrash">
<requires>
  <import addon="xbmc.python" version="2.24.0"/>
  <import addon="script.module.requests"/>
  <import addon="script.module.beautifulsoup4"/>
  <import addon="plugin.video.youtube" optional="true" />
  <import addon="plugin.video.fanfilm" optional="true" />
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Release24 Kodi Video Plugin</summary>
  <description lang="en">Addon</description>
  <disclaimer lang="en">Plugin</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-01.jpg</screenshot>
    <screenshot>resources\screenshot-02.jpg</screenshot>
  </assets>
  <news>Updated with latest artwork metadata</news>
</extension>
</addon>

<addon id="plugin.video.toyago" name="ToyaGO" version="1.3.13" provider-name="piotrekcrash">
<requires>
  <import addon="xbmc.python" version="2.24.0"/>
  <import addon="script.module.beautifulsoup4" version="4.3.1"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.service" library="service.py" start="startup" />
<extension point="xbmc.addon.metadata">
  <summary lang="pl">ToyaGO Kodi Video Plugin</summary>
  <description lang="pl">Addon daje możliwość oglądania kanałów dostępnych w usłudze ToyaGo zalogowanemu użytkownikowi zgodnie z wykupionym pakietem</description>
  <disclaimer lang="pl">Plugin ToyaGO dla Kodi</disclaimer>
  <disclaimer lang="pl">Thanks for @WLS</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-03.png</screenshot>
    <screenshot>resources\screenshot-04.png</screenshot>
    <screenshot>resources\screenshot-05.png</screenshot>
  </assets>
  <news>v1.3.0 (18.04.2019)
    [new] Added Radios
    [new] Added Cameras
  </news>
</extension>
</addon>

<addon id="repository.piotrekcrash" name="piotrekcrash Kodi Add-ons Repository" version="1.0.4" provider-name="piotrekcrash">
    <extension point="xbmc.addon.repository" name="piotrekcrash Kodi Add-ons Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/piotrekcrash/kodi/master/addons.xml</info>
